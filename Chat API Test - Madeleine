from chat_api import ChatBackend

def show(title, messages):
    print(f"\n== {title} ==")
    for m in messages:
        print(f"{ChatBackend.readable_time(None, m['ts'])} {m['sender']}: {m['text']}")

def main():
    chat = ChatBackend()
    chat.enable_bot(True)
    chat.send_message("Magali", "You", "hello")
    chat.send_message("Magali", "You", "translate this sentence please")
    show("All messages", chat.get_messages("Magali"))

if __name__ == "__main__":
    main()

# Tested with:
# Translation: chat.send_message("Magali", "You", "translate good morning")
# Conversation: chat.send_message("Magali", "You", "how are you?") , chat.send_message("Magali", "You", "i love french food")
# Fallback/not understanding: chat.send_message("Magali", "You", "whatâ€™s your favorite color?")


